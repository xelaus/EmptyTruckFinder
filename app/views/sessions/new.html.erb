      <div class="form-group">
          <%= f.text_field(:company_name, placeholder: 'Company Name', id: "company_name") %> 
      </div>
      
      <div class="form-group">
        <%= f.email_field(:email, placeholder: 'Email', id: "email_input_s") %> 
      </div>
      
      <div class="form-group">
          <%= f.text_field(:phone, placeholder: 'Phone Number', id: "phone_number") %> 
      </div>
      
      <div class="form-group">
          <%= f.password_field(:password, placeholder: 'Password', id: "password_input_s") %> 
      </div>
  </div> 
  <div class="form-group">
        <div id="btn-signup" draggable="true">
            <p>Sign up</p> 
        </div>
      <%= f.submit "Sign up", name: "admin_user", id: "btn-signup-hidden" %> 
  </div> 
<% end %>

